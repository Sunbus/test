{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "allowJs": true,
    "isolatedModules": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "jsx": "react",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./node_modules/@regulaforensics"
    ],
    "paths": {
      "@module": [
        "src/module"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@view/*": [
        "src/view/*"
      ],
      "@usecases": [
        "src/usecases"
      ],
      "@repository": [
        "src/repository"
      ]
    }
  },
  "linterOptions": {
    "exclude": [
      "node_modules/*"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "./types/declaration.d.ts",
    "./types/environment.d.ts",
    "./types/global.d.ts"
  ],
}
